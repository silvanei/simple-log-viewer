{
  "name": "s3/simple-log-viewer",
  "version": "0.0.1",
  "description": "Simple log viewer for development environment",
  "authors": [
    {
      "name": "Silvanei Soares Santos",
      "email": "ads.silvanei@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "S3\\Log\\Viewer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\S3\\Log\\Viewer\\": "tests/",
      "Test\\Support\\S3\\Log\\Viewer\\": "tests/support/"
    }
  },
  "require": {
    "php": ">=8.3",
    "ext-pdo": "*",
    "react/http": "^1.11",
    "clue/sse-react": "dev-master",
    "nikic/fast-route": "^1.3",
    "respect/validation": "^2.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.12",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12.1",
    "infection/infection": "^0.29.14"
  },
  "scripts": {
    "check": [
      "@test",
      "@phpstan",
      "@phpcs"
    ],
    "phpcs": "phpcs",
    "phpstan": "phpstan analyse --memory-limit=-1",
    "test": "phpunit",
    "test-coverage": "XDEBUG_MODE=coverage phpunit --coverage-html storage/coverage/",
    "test-infection": "infection"
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
