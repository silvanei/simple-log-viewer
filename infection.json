{
    "source": {
        "directories": [
            "src"
        ],
        "excludes": [
            "/Application\\.php/"
        ]
    },
    "logs": {
        "text": "storage/infection/infection.txt",
        "html": "storage/infection/infection.html"
    },
    "mutators": {
        "global-ignore": [
            "FooClass::__construct"
        ],
        "@default": true,
        "@cast": false,
        "MatchArmRemoval": {
            "ignoreSourceCodeByRegex": [
                "default => '',"
            ]
        }
    },
    "testFramework": "phpunit"
}